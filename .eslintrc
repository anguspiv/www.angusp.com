{
  "extends": ["airbnb", "prettier", "plugin:storybook/recommended"],
  "plugins": ["prettier", "cypress", "jest", "jest-dom", "testing-library"],
  "parser": "@babel/eslint-parser",
  "globals": {
    "__PATH_PREFIX__": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@components", "./src/components"],
          ["@styles", "./src/styles"],
          ["@utils", "./src/utils"]
        ]
      }
    }
  },
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "pathGroups": [
          { "pattern": "@src/**", "group": "internal" },
          { "pattern": "@components/**", "group": "internal" },
          { "pattern": "@utils/**", "group": "internal" }
        ]
      }
    ],
    "react/jsx-props-no-spreading": "off"
  },
  "overrides": [
    {
      "files": ["*.stories.js", "*.stories.jsx", "*.story.js", "*.story.jsx"],
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "react/prop-types": "off",
        "react/function-component-definition": "off"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "excludedFiles": ["cypress/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "react/prop-types": "off",
        "import/no-extraneous-dependencies": "off",
        "react/function-component-definition": "off"
      },
      "extends": ["plugin:jest/all", "plugin:jest/recommended", "plugin:jest-dom/recommended"]
    },
    {
      "files": ["cypress/**/*.js"],
      "env": {
        "cypress/globals": true
      },
      "rules": {
        "react/prop-types": "off",
        "import/no-extraneous-dependencies": "off"
      },
      "extends": ["plugin:cypress/recommended"]
    }
  ]
}
